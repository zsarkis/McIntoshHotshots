@using Microsoft.AspNetCore.Components.Authorization
@inherits LayoutComponentBase



<div class="page fade-in">
    <CascadingAuthenticationState>
        <header class="main-header">
            <div class="header-content">
                <!-- Logo Section -->
                <div class="logo-section">
                    <div class="logo-icon">
                        <i class="fas fa-bullseye"></i>
                    </div>
                    <h1 class="brand-title">McIntosh Hotshots</h1>
                    <span class="brand-subtitle">Dart Tournament Series</span>
                </div>

                <!-- Navigation -->
                <nav class="main-nav">
                    <div class="nav-links">
                        <a href="/" class="nav-link">
                            <i class="fas fa-home"></i>
                            <span>Home</span>
                        </a>
                        <a href="/live-scoring" class="nav-link primary-action">
                            <i class="fas fa-play"></i>
                            <span>Play</span>
                        </a>
                        <a href="/coaching" class="nav-link">
                            <i class="fas fa-graduation-cap"></i>
                            <span>Coaching</span>
                        </a>

                        <!-- Stats Dropdown -->
                        <div class="nav-dropdown @(statsDropdownOpen ? "active" : "")">
                            <button class="nav-link dropdown-trigger"
                                    @onclick="() => statsDropdownOpen = !statsDropdownOpen">
                                <i class="fas fa-chart-bar"></i>
                                <span>Stats</span>
                                <i class="fas fa-chevron-down dropdown-arrow"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a href="/player-stats" class="dropdown-item">
                                    <i class="fas fa-user-chart"></i>
                                    Player Stats
                                </a>
                                <a href="/tournament-stats" class="dropdown-item">
                                    <i class="fas fa-trophy"></i>
                                    Tournament Stats
                                </a>
                            </div>
                        </div>

                        <a href="/Identity/Account/Manage" class="nav-link">
                            <i class="fas fa-user-cog"></i>
                            <span>Profile</span>
                        </a>

                        <!-- Admin Dropdown -->
                        <AuthorizeView Roles="Admin">
                            <div class="nav-dropdown @(adminDropdownOpen ? "active" : "")">
                                <button class="nav-link dropdown-trigger admin-link"
                                        @onclick="() => adminDropdownOpen = !adminDropdownOpen">
                                    <i class="fas fa-shield-alt"></i>
                                    <span>Admin</span>
                                    <i class="fas fa-chevron-down dropdown-arrow"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a href="/tournament-manager" class="dropdown-item">
                                        <i class="fas fa-calendar-alt"></i>
                                        Tournament Manager
                                    </a>
                                    <a href="/elo-rankings" class="dropdown-item">
                                        <i class="fas fa-ranking-star"></i>
                                        ELO Rankings
                                    </a>
                                </div>
                            </div>
                        </AuthorizeView>
                    </div>

                    <!-- Search Section -->
                    <div class="search-section">
                        <div class="search-container">
                            <i class="fas fa-search search-icon"></i>
                            <input type="text" placeholder="Search tournaments, players..." class="search-input"/>
                            <kbd class="search-shortcut">⌘K</kbd>
                        </div>
                    </div>
                </nav>
            </div>
        </header>

        <main class="main-content">
            <div class="content-container">
                @Body
            </div>
        </main>

        <!-- Footer -->
        <footer class="main-footer">
            <div class="footer-content">
                <div class="footer-section">
                    <h4>McIntosh Hotshots</h4>
                    <p>Professional dart tournament management system</p>
                </div>
                <div class="footer-section">
                    <h5>Quick Links</h5>
                    <a href="/tournaments">Tournaments</a>
                    <a href="/leaderboard">Leaderboard</a>
                    <a href="/stats">Statistics</a>
                </div>
                <div class="footer-section">
                    <h5>Support</h5>
                    <a href="/help">Help Center</a>
                    <a href="/contact">Contact</a>
                    <a href="/feedback">Feedback</a>
                </div>
                <div class="footer-section">
                    <div class="social-links">
                        <a href="#" class="social-link" title="Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="social-link" title="Discord">
                            <i class="fab fa-discord"></i>
                        </a>
                        <a href="#" class="social-link" title="GitHub">
                            <i class="fab fa-github"></i>
                        </a>
                    </div>
                </div>
            </div>
            <div class="footer-bottom">
                <p>&copy; 2025 McIntosh Hotshots. All rights reserved.</p>
            </div>
        </footer>
    </CascadingAuthenticationState>
</div>

<!-- Error UI -->
<div id="blazor-error-ui">
    <div class="error-content">
        <i class="fas fa-exclamation-triangle"></i>
        <span>An unhandled error has occurred.</span>
        <div class="error-actions">
            <a href="" class="btn btn-secondary reload">
                <i class="fas fa-redo"></i>
                Reload
            </a>
            <button class="btn btn-ghost dismiss">
                <i class="fas fa-times"></i>
            </button>
        </div>
    </div>
</div>

@code {
    private bool statsDropdownOpen = false;
    private bool adminDropdownOpen = false;
}