@inherits LayoutComponentBase

<div class="page">


    <main>
        <div class="top-row px-4">
            <div style="width: 40px; height: 40px; background: rgba(0, 0, 0, 0.10); border-radius: 100px"></div>
            <div style="flex: 1 1 0; color: black; font-size: 28px; font-family: Roboto; font-weight: 500; line-height: 36px; word-wrap: break-word">McIntosh Hotshots Dart Tournament Series</div>
            <div style="justify-content: center; align-items: center; gap: 40px; display: flex">
                <a href="#" style="color: black; font-size: 16px; font-family: Roboto; font-weight: 400; line-height: 24px; word-wrap: break-word">Home</a>
                <a href="#" style="color: black; font-size: 16px; font-family: Roboto; font-weight: 400; line-height: 24px; word-wrap: break-word">Tournaments</a>
                <a href="#" style="color: black; font-size: 16px; font-family: Roboto; font-weight: 400; line-height: 24px; word-wrap: break-word">Stats</a>
                <a href="/Identity/Account/Manage" style="color: black; font-size: 16px; font-family: Roboto; font-weight: 400; line-height: 24px; word-wrap: break-word">Profile</a>
                <div style="height: 36px; padding: 8px; border-radius: 6px; border: 1px rgba(0, 0, 0, 0.10) solid; justify-content: flex-end; align-items: center; gap: 4px; display: flex">
                    <div style="flex: 1 1 0; color: rgba(0, 0, 0, 0.50); font-size: 14px; font-family: Roboto; font-weight: 400; line-height: 20px; word-wrap: break-word">Search in site</div>
                    <div style="width: 20px; height: 20px; position: relative">
                        <div style="width: 16.98px; height: 16.96px; left: 1.67px; top: 1.67px; position: absolute; background: rgba(0, 0, 0, 0.70)"></div>
                    </div>
                </div>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

