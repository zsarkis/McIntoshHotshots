    }
    
    /* Current Turn */
    .current-turn {
        text-align: center;
        padding: 20px;
        background: #e9ecef;
        border-radius: 8px;
        margin-bottom: 20px;
    }
    
    .current-player {
        font-size: 1.5rem;
        font-weight: bold;
        margin-bottom: 10px;
    }
    
    .turn-scores {
        font-size: 1.2rem;
        color: #007bff;
        margin-top: 10px;
    }
    
    /* Score Input */
    .score-input-section {
        margin-bottom: 30px;
    }
    
    .score-input {
        display: flex;
        gap: 15px;
        justify-content: center;
