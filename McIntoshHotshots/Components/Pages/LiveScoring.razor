    }
    
    .score-row {
        display: flex;
        gap: 10px;
        justify-content: center;
        margin-bottom: 10px;
    }
    
    .quick-score-btn {
        padding: 20px;
        font-size: 1.2rem;
        font-weight: bold;
        border: 2px solid #007bff;
        background: white;
        color: #007bff;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s;
