@using Microsoft.AspNetCore.Hosting
@using Microsoft.AspNetCore.Mvc.ViewEngines
@inject IWebHostEnvironment Environment
@inject ICompositeViewEngine Engine
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - McIntosh Hotshots</title>

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <!-- Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    
    <!-- Styles -->
    <environment include="Development">
        <link rel="stylesheet" href="~/bootstrap/bootstrap.min.css" />
        <link rel="stylesheet" href="~/app.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/css/bootstrap.min.css"
              integrity="sha384-KyZXEAg3QhqLMpG8r+8fhAXLRk2vvoC2f3B09zVXn8CA5QIVfZOJ3BCsw2P0p/We" crossorigin="anonymous"
              asp-fallback-href="~/bootstrap/bootstrap.min.css"
              asp-fallback-test-class="sr-only" asp-fallback-test-property="position" asp-fallback-test-value="absolute" />
        <link rel="stylesheet" href="~/app.css" asp-append-version="true" />
    </environment>
</head>
<body class="identity-layout">
    <div class="page fade-in">
        <header class="identity-header">
            <div class="header-content">
                <!-- Logo Section -->
                <div class="logo-section">
                    <div class="logo-icon">
                        <i class="fas fa-bullseye"></i>
                    </div>
                    <a href="~/" class="brand-link">
                        <h1 class="brand-title">McIntosh Hotshots</h1>
                        <span class="brand-subtitle">Authentication</span>
                    </a>
                </div>

                <!-- Navigation -->
                <nav class="identity-nav">
                    @{
                        var result = Engine.FindView(ViewContext, "_LoginPartial", isMainPage: false);
                    }
                    @if (result.Success)
                    {
                        await Html.RenderPartialAsync("_LoginPartial");
                    }
                    else
                    {
                        <div class="nav-error">
                            <i class="fas fa-exclamation-triangle"></i>
                            <span>Navigation error occurred</span>
                        </div>
                    }
                </nav>
            </div>
        </header>

        <main class="identity-main">
            <div class="identity-container">
                <partial name="_CookieConsentPartial" optional />
                <div class="identity-content">
                    @RenderBody()
                </div>
            </div>
        </main>

        <footer class="identity-footer">
            <div class="footer-content">
                <div class="footer-links">
                    <a href="~/" class="footer-link">
                        <i class="fas fa-home"></i>
                        Back to App
                    </a>
                    @{
                        var foundPrivacy = Url.Page("/Privacy", new { area = "" });
                    }
                    @if (foundPrivacy != null)
                    {
                        <a asp-area="" asp-page="/Privacy" class="footer-link">
                            <i class="fas fa-shield-alt"></i>
                            Privacy
                        </a>
                    }
                    <a href="/help" class="footer-link">
                        <i class="fas fa-question-circle"></i>
                        Help
                    </a>
                </div>
                <p class="footer-copyright">&copy; 2025 McIntosh Hotshots. All rights reserved.</p>
            </div>
        </footer>
    </div>

    <!-- Scripts -->
    <environment include="Development">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="~/bootstrap/bootstrap.bundle.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                asp-fallback-src="~/bootstrap/js/jquery.min.js"
                asp-fallback-test="window.jQuery"
                crossorigin="anonymous">
        </script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.0/dist/js/bootstrap.bundle.min.js"
                asp-fallback-src="~/bootstrap/bootstrap.bundle.min.js"
                asp-fallback-test="window.jQuery && window.jQuery.fn && window.jQuery.fn.modal"
                crossorigin="anonymous"
                integrity="sha384-U1DAWAznBHeqEIlVSCgzq+c9gqGAJn5c/t99JyeKa9xxaYpSvHU5awsuZVVFIhvj">
        </script>
    </environment>

    @await RenderSectionAsync("Scripts", required: false)

    <style>
        /* Identity Layout Specific Styles */
        .identity-layout {
            background: var(--bg-primary);
            min-height: 100vh;
        }

        .identity-header {
            background: rgba(10, 10, 11, 0.95);
            backdrop-filter: blur(20px) saturate(180%);
            border-bottom: 1px solid var(--border-primary);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .identity-header .header-content {
            display: flex;
            align-items: center;
            justify-content: space-between;
            max-width: 1200px;
            margin: 0 auto;
            padding: var(--spacing-md) var(--spacing-xl);
            height: 64px;
        }

        .identity-header .logo-section {
            display: flex;
            align-items: center;
            gap: var(--spacing-md);
        }

        .identity-header .logo-icon {
            width: 40px;
            height: 40px;
            background: var(--gradient-primary);
            border-radius: var(--radius-lg);
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.25rem;
            box-shadow: var(--shadow-sm);
        }

        .identity-header .brand-link {
            text-decoration: none;
            color: inherit;
        }

        .identity-header .brand-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: var(--text-primary);
            margin: 0;
        }

        .identity-header .brand-subtitle {
            font-size: 0.75rem;
            color: var(--text-tertiary);
            font-weight: 400;
        }

        .identity-nav {
            display: flex;
            align-items: center;
        }

        .identity-nav .navbar-nav {
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
            list-style: none;
            margin: 0;
            padding: 0;
        }

        .identity-nav .nav-item {
            display: flex;
        }

        .identity-nav .nav-link {
            color: var(--text-secondary);
            text-decoration: none;
            padding: var(--spacing-sm) var(--spacing-md);
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            font-weight: 500;
            transition: all var(--transition-fast);
            border: none;
            background: none;
            cursor: pointer;
        }

        .identity-nav .nav-link:hover {
            color: var(--text-primary);
            background: var(--interactive-hover);
        }

        .identity-nav .btn-link {
            color: var(--text-secondary);
            border: none;
            background: none;
            padding: var(--spacing-sm) var(--spacing-md);
            border-radius: var(--radius-md);
            font-size: 0.875rem;
            font-weight: 500;
            transition: all var(--transition-fast);
            cursor: pointer;
        }

        .identity-nav .btn-link:hover {
            color: var(--text-primary);
            background: var(--interactive-hover);
        }

        .nav-error {
            display: flex;
            align-items: center;
            gap: var(--spacing-sm);
            color: var(--accent-error);
            font-size: 0.875rem;
            padding: var(--spacing-sm) var(--spacing-md);
            background: rgba(239, 68, 68, 0.1);
            border-radius: var(--radius-md);
        }

        .identity-main {
            flex: 1;
            display: flex;
            justify-content: center;
            align-items: flex-start;
            padding: var(--spacing-2xl) var(--spacing-xl);
            min-height: calc(100vh - 200px);
        }

        .identity-container {
            width: 100%;
            max-width: 480px;
        }

        .identity-content {
            background: var(--gradient-surface);
            border: 1px solid var(--border-primary);
            border-radius: var(--radius-xl);
            box-shadow: var(--shadow-lg);
            padding: var(--spacing-2xl);
            margin-top: var(--spacing-xl);
        }

        .identity-footer {
            background: var(--bg-secondary);
            border-top: 1px solid var(--border-primary);
            padding: var(--spacing-lg) var(--spacing-xl);
            text-align: center;
        }

        .identity-footer .footer-content {
            max-width: 1200px;
            margin: 0 auto;
        }

        .identity-footer .footer-links {
            display: flex;
            justify-content: center;
            gap: var(--spacing-lg);
            margin-bottom: var(--spacing-md);
        }

        .identity-footer .footer-link {
            display: flex;
            align-items: center;
            gap: var(--spacing-xs);
            color: var(--text-secondary);
            text-decoration: none;
            font-size: 0.875rem;
            transition: all var(--transition-fast);
        }

        .identity-footer .footer-link:hover {
            color: var(--accent-primary);
        }

        .identity-footer .footer-copyright {
            color: var(--text-muted);
            font-size: 0.75rem;
            margin: 0;
        }

        /* Responsive */
        @@media (max-width: 768px) {
            .identity-header .header-content {
                padding: var(--spacing-sm) var(--spacing-md);
                height: 56px;
            }

            .identity-header .brand-title {
                font-size: 1.125rem;
            }

            .identity-main {
                padding: var(--spacing-lg) var(--spacing-md);
            }

            .identity-content {
                padding: var(--spacing-xl);
            }

            .identity-footer .footer-links {
                flex-direction: column;
                gap: var(--spacing-sm);
            }
        }
    </style>
</body>
</html>
